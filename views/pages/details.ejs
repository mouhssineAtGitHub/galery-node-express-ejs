<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
        <style>
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 70%;
                margin: auto;
                text-align: center;
            }
            img{
                width:100%;
                max-height:50%;
            }    
            .title {
                color: grey;
                font-size: 18px;
            }

            button {
                border: none;
                outline: 0;
                display: inline-block;
                padding: 8px;
                color: white;
                background-color: #000;
                text-align: center;
                cursor: pointer;
                width: 100%;
                font-size: 18px;
            }

            a {
                text-decoration: none;
                font-size: 22px;
                color: black;
            }

            button:hover,
            a:hover {
                opacity: 0.7;
            }
        </style>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="jumbotron">

            <h2>Welcome to The Integrify Photos Gallery - Details page</h2>

            <% include ../partials/menu %>

                <div class="card">
                    <img src="/assets/images/<%=student.src %>" alt="John" style="width:100%">
                    <h1><%=student.firstName %> <%=student.lastName %></h1>
                    <p class="title"><%=student.title %></p>
                    <p><%=student.nationality %></p>
                    <span>skills:
                        <%=student.skills.join(" ") %>
                    </span>
                    <span>whySofterDeveloper:
                        <%=student.whySofterDeveloper %>
                    </span>
                    <p>longTermVision:
                        <%=student.longTermVision %>
                    </p>
                    <p>motivatesMe:
                        <%=student.motivatesMe %>
                    </p>
                    <p>favoriteQuote:
                        <%=student.favoriteQuote %>
                    </p>
                    <p>joinedOn:
                        <%=student.joinedOn %>
                    </p>
                    <a href="#">
                        <i class="fa fa-dribbble"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-twitter"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-linkedin"></i>
                    </a>
                    <a href="#">
                        <i class="fa fa-facebook"></i>
                    </a>
                    <p>
                        <button>Contact</button>
                    </p>
                </div>
        </div>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>